@model Portfolio.Mails.EmailMessage

<section id="contact">
    <div class="row section-head">
        <div class="two columns header-col">
            <h1><span>Get In Touch.</span></h1>
        </div>
        <div class="ten columns">
            <p class="lead">
                If you want me to be part of your team, work together on projects or just chat with me, please send me a message or an e-mail.
            </p>
        </div>
    </div>
    <div class="row">
        <div class="eight columns">
            <form asp-controller="Mail" asp-action="SendMessage">
                <div asp-validation-summary="All" class="text-danger"></div>

                <fieldset>
                    <div class="form-group">
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" id="contactName">
                    </div>
                    <div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" id="contactEmail">
                    </div>
                    <div>
                        <label asp-for="Subject">Subject</label>
                        <input asp-for="Subject" id="contactSubject">
                    </div>
                    <div>
                        <span asp-validation-for="Content" class="text-danger"></span>
                        <label asp-for="Content">Message</label>
                        <textarea asp-for="Content" id="contactMessage"></textarea>
                    </div>
                    <div>
                        <button class="submit">Submit</button>
                        <span id="image-loader">
                            <img alt="" src="images/loader.gif">
                        </span>
                    </div>
                </fieldset>
            </form>
            <div id="message-warning"> Error boy</div>
            <div id="message-success">
                <i class="fa fa-check"></i>Your message was sent, thank you!<br>
            </div>
        </div>
        <aside class="four columns footer-widgets">
            <div class="widget widget_contact">
                <h4>Address and Phone</h4>
                <p class="address">
                    <span>Velizar Velikov</span><br>
                    <span>(+359) 897-249-835</span><br>
                    <span>Sofia, Bulgaria</span><br>
                    <span>velizar.velikov@gmail.com</span>
                </p>
            </div>
        </aside>
    </div>
</section>
